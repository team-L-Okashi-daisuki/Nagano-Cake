<h2>商品編集</h2>
<%= form_with model: @product, url: admin_product_path, local: true do |f| %>
  <table>
  <tr>
    <th><%= f.label :商品画像 %></th>
    <td><%= f.file_field :product_image, accept: "image/*" %></td>
  </tr>
  <tr>
    <th><%= f.label :商品名 %></th>
    <td><%= f.text_field :name, placeholder:"商品名" %></td>
  </tr>
  <tr>
    <th><%= f.label :商品説明 %></th>
    <td><%= f.text_area :description, size: "50x5", placeholder:"ここに説明文を記述します" %></td>
  </tr>
  <tr>
    <th><%= f.label :ジャンル %></th>
    <td><%= f.collection_select :genre_id, Genre.all, :id, :name, :prompt => "--選択してください--" %></td>
  </tr>
  <tr>
    <th><%= f.label :税抜価格 %></th>
    <td><%= f.text_field :price, placeholder:"1000" %>円</td>
  </tr>
  <tr>
    <th><%= f.label :販売ステータス %></th>
    <td><%= f.radio_button :is_active, true, checked: true %>
        <%= f.label :is_active, "販売中" %>
        <%= f.radio_button :is_active, false %>
        <%= f.label :is_active, "販売停止中" %>
    </td>
  </tr>
  <tr>
    <td><%= f.submit "変更を保存", class:"btn btn-success" %></td>
  </tr>
</table>
<% end %>