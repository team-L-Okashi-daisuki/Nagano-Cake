<div class="container">
  <div class="row">
    <div class="col">
      <h2>配送先登録/一覧</h2>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <%= form_with model: @shipping, local: true do |f| %>
      <table>
        <tr>
        <div calss="form-group">
          <th><%= f.label :"郵便番号(ハイフンなし)" %></th>
          <td><%= f.text_field :zip_code, placeholder:"0000000", id: "customer_postcode" %></td>
        </div>
        </tr>

        <tr>
        <div calss="form-group">
          <th><%= f.label :"住所" %></th>
          <td><%= f.text_field :address, placeholder:"東京都渋谷区代々木神園町0-0", :size => "50", id: "customer_address" %></td>
        </div>
        </tr>

        <tr>
        <div calss="form-group">
          <th><%= f.label :"宛名" %></th>
          <td><%= f.text_field :name, placeholder:"令和道子"%></td>
        　<td><%= f.submit "新規登録", class:"btn btn-success" %></td>
        </div>
        </tr>

      </table>
      <% end %>

    </div>
  </div>

  <div class="row">
    <div class="col">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛先</th></th>
            <th colspan="2"></th>
          </tr>
        </thead>
        <tbody>
        <% @shippings.each do |shipping| %>
          <tr>
            <td><%= shipping.zip_code %></td>
            <td><%= shipping.address %></td>
            <td><%= shipping.name %></td>
            <td>
              <%= link_to "編集する", edit_shipping_path(shipping), class:"btn btn-success" %>
              <%= link_to "削除する", shipping, method: :delete, "data-confirm" => "本当に削除しますか？", class:"btn btn-danger" %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>

    </div>
  </div>


</div>