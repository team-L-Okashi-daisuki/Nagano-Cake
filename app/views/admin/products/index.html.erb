<div class="container">
  <div class="row">
    <div class="col-sm-10 px-sm-0 mx-auto">
      <h2>商品一覧</h2>
      <div class="col-sm-2 px-sm-0 text-right mb-2">
        <%= link_to new_admin_product_path, class: "btn btn--circle btn--circle-c btn--shadow" do %>
          <i class="fas fa-plus"></i>
        <% end %>
      </div>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @products.each do |product| %>
          <tr>
            <td><%= product.id %></td>
            <td>
              <%= link_to admin_product_path(product.id) do %>
                <u><%= product.name %></u>
              <% end %>
            </td>
            <td><%= product.price %></td>
            <td><%= product.genre.name %></td>
            <td>
              <% if product.is_active == true %>
                <p class="text-success font-weight-bold">販売中</p>
              <% else %>
                <p class="text-danger font-weight-bold">販売停止中</p>
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @products %>
    </div>
  </div>
</div>
