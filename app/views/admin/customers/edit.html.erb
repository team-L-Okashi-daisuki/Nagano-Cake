<div class="container">
  <div class="row my-3">
    <div class="col-sm-8 px-sm-0 offset-sm-1">
      <h2><%= @customer.last_name + @customer.first_name %>さんの会員詳細</h2>
    </div>
  </div>
  <%= form_with model: @customer, url:admin_customer_path, local:true do |f| %>
    <div class="row">
      <table class="table table-bordered">
        <tr>
          <th>会員ID</th>
          <td><%= @customer.id %></td>
        </tr>
        <tr>
          <th>氏名</th>
          <td><%= @customer.last_name + @customer.first_name %></td>
        </tr>
        <tr>
          <th>フリガナ</th>
          <td><%= f.text_field :last_name %><%= f.text_field :first_name %></td>
        </tr>
        <tr>
          <th>郵便番号</th>
          <td><%= f.text_field :zip_code %></td>
        </tr>
        <tr>
          <th>住所</th>
          <td><%= f.text_field :address %></td>
        </tr>
        <tr>
          <th>電話番号</th>
          <td><%= f.text_field :phone_number %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= f.email_field :email %></td>
        </tr>
        <tr>
          <th>会員ステータス</th>
          <td>
              <%= f.radio_button :is_active, :true %>
              <%= f.label :is_active, "有効" %>
              <%= f.radio_button :is_active, :false %>
              <%= f.label :is_active, "退会" %>
          </td>
        </tr>
      </table>
    </div>
    <div class="row mb-2">
      <div class="col-lg-6 px-sm-0 offset-sm-1">
        <%= f.submit "変更を保存", class:"btn btn-success my-4" %>
      </div>
    </div>
  <% end %>
</div>