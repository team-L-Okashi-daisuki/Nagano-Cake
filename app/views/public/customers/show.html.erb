<div class="container">
  <div class="row">
    <h4>　マイページ　</h4>
  </div>
  <div class="row">
    <h4>登録情報　</h4>
    <%= link_to "編集する",customers_information_edit_path , class: "btn btn-success" %>
    <table class="table">
      <tr>
        <th>氏名</th>
        <td><%= @customer.last_name %> <%= @customer.first_name %></td>
      </tr>
      <tr>
        <th>カナ</th>
        <td><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
      </tr>
      <tr>
        <th>郵便番号</th>
        <td><%= @customer.zip_code %></td>
      </tr>
      <tr>
        <th>住所</th>
        <td><%= @customer.address %></td>
      </tr>
      <tr>
        <th>電話番号</th>
        <td><%= @customer.phone_number %></td>
      </tr>
      <tr>
        <th>メールアドレス</th>
        <td><%= @customer.email %></td>
      </tr>
    </table>
  </div>
  <div class="row">
    <div class="coll"><h4>配送先</h4></div>
    <div class="coll">
      <%= link_to "一覧を見る", shippings_path, class: "btn btn-primary" %>
    </div>
  </div>
  <div class="row">
    <div class="col"><h4>注文履歴</h4></div>
    <div class="col">
      <%= link_to "一覧を見る", orders_path, class: "btn btn-primary" %>
    </div>
  </div>
</div>
