<div class="container">
  <div class="col-sm-10"><h2>注文履歴詳細</h2></div>
  <%= form_with model: @order, url: admin_order_path, method: :patch, local: true do |f| %>
    <table class="table table-bordered">
      <tr>
        <th class="table-active" style="width:20%">購入者</th>
        <td class="link"><%= link_to admin_customer_path do %><%= @order.customer.last_name + @order.customer.first_name %><% end %></td>
      </tr>
      <tr><th class="table-active" style="width:20%">注文日</th><td><%= @order.created_at.strftime("%Y-%m-%d %H:%M:%S") %></td></tr>
      <tr><th class="table-active" style="width:20%">配送先</th><td>〒<%= @order.shipping.zip_code %> <%= @order.shipping.address %> <%= @order.shipping.name %></td></tr>
      <tr><th class="table-active" style="width:20%">支払い方法</th><td><%= @order.shipping.payment_method %></td></tr>
      <tr><th class="table-active" style="width:20%"><%= f.label :order_status, "注文ステータス" %></th>
        <td>
          <% if @order.発送準備中? || @order.発送済み?  %>
            <%= f.select :status,Order.statuses.keys %>
          <% else %>
            <%= f.select :status,Order.statuses.keys, {disabled: ["発送準備中","発送済み"]} %>
          <% end %>
          <%= f.submit "更新", class: "btn btn-success" %>
        </td>
      </tr>
    </table>
  <% end %>

  <div class="row">
    <div class="col-sm-8">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th class="table-active">商品名</th>
            <th class="table-active">単価(税込)</th>
            <th class="table-active">数量</th>
            <th class="table-active">小計</th>
            <th class="table-active">製作ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @order.order_details.each do |order_detail| %>
          <tr>
            <td class="align-middle"><%= order_detail.product_name %></td>
            <td class="align-middle"><%= order_detail.price %></td>
            <td class="align-middle"><%= order_detail.quantity %></td>
            <td class="align-middle"><%= order_detail.price * order_detail.quantity%>円</td>
            <td class="align-middle">
              <%= form_with model: order_detail, url: admin_order_detail_path, method: :patch, local: true do |f| %>
                <%= f.hidden_field :order_detail_id, :value => order_detail.id %>
                <%= f.select :status, OrderDetail.status.keys %>
                <%= f.submit "更新", class: "btn btn-success" %>
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <div class="col-sm-4">
      <table class="table table-bordered">
        <tr>
          <th class="table-active" style="width:50%">商品合計</th>
          <td>
            <% @add_tax_total_payment =  @order.bill - @order.postage %>
            <%= @add_tax_total_payment %>円
          </td>
        </tr>
        <tr>
          <th class="table-active" style="width:50%">送料</th><td><%= @order.postage %>円</td>
        </tr>
        <tr>
          <th class="table-active" style="width:50%">請求金額合計</th>
          <td> <%= @order.bill %>円</td>
        </tr>
      </table>
     </div>
  </div>
</div>