<div class="container">
  <div class="row">
    <h4>　マイページ　</h4>
  </div>
  <div class="row">
    <h4>登録情報　</h4>
    <%= link_to "編集する",customers_information_edit_path , class: "btn btn-success" %>
    <table class="table">
      <tr>
        <th>氏名</th>
        <td><%= @customer.last_name %> <%= @customer.first_name %></td>
      </tr>
      <tr>
        <th>カナ</th>
        <td><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
      </tr>
      <tr>
        <th>郵便番号</th>
        <td><%= @customer.zip_code %></td>
      </tr>
      <tr>
        <th>住所</th>
        <td><%= @customer.address %></td>
      </tr>
      <tr>
        <th>電話番号</th>
        <td><%= @customer.phone_number %></td>
      </tr>
      <tr>
        <th>メールアドレス</th>
        <td><%= @customer.email %></td>
      </tr>
    </table>
  </div>
  <div class="row">
    <p>配送先 <div class="btn">一覧を見る</div></p>
  </div>
  <div class="row">
    <p>注文履歴 <div class="btn">一覧を見る</div></p>
  </div>
</div>
