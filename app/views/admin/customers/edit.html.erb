<h2><%= @customer.last_name + @customer.first_name %>さんの会員詳細</h2>
<%= form_with model: @customer, url:admin_customer_path, local:true do |f| %>
  <table class="table table-bordered">
    <tr>
      <th>会員ID</th>
      <td><%= @customer.id %></td>
    </tr>
    <tr>
      <th>氏名</th>
      <td><%= @customer.last_name + @customer.first_name %></td>
    </tr>
    <tr>
      <th>フリガナ</th>
      <td><%= f.text_field :last_name %><%= f.text_field :first_name %></td>
    </tr>
    <tr>
      <th>郵便番号</th>
      <td><%= f.text_field :zip_code %></td>
    </tr>
    <tr>
      <th>住所</th>
      <td><%= f.text_field :address %></td>
    </tr>
    <tr>
      <th>電話番号</th>
      <td><%= f.text_field :phone_number %></td>
    </tr>
    <tr>
      <th>メールアドレス</th>
      <td><%= f.email_field :email %></td>
    </tr>
    <tr>
      <th>会員ステータス</th>
      <td>
          <%= f.radio_button :is_active, :true %>
          <%= f.label :is_active, "有効" %>
          <%= f.radio_button :is_active, :false %>
          <%= f.label :is_active, "退会" %>
      </td>
    </tr>
  </table>
  <%= f.submit "変更を保存" %>
<% end %>