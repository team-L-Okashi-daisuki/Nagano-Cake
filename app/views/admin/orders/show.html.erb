<div class="container">
  <div class="col-sm-10"><h2>注文履歴詳細</h2></div>
  <%= form_with model: @order, url: admin_order_path, method: :patch, local: true do |f| %>
    <table class="table table-bordered">
      <tr>
        <th>購入者</th>
        <td class="link"><%= link_to admin_customer_path do %><%= @order.customer.last_name + @order.customer.first_name %><% end %></td>
      </tr>
      <tr><th>注文日</th><td><%= @order.created_at.strftime("%Y-%m-%d %H:%M:%S") %></td></tr>
      <tr><th>配送先</th><td>〒<%= @order.shipping.zip_code %> <%= @order.shipping.address %> <%= @order.shipping.name %></td></tr>
      <tr><th>支払い方法</th><td><%= @order.shipping.payment_method %></td></tr>
      <tr><th><%= f.label :order_status, "注文ステータス" %></th>
        <td>
          <% if @order.発送準備中? || @order.発送済み?  %>
            <%= f.select :order_status,Order.order_statuses.keys %>
          <% else %>
            <%= f.select :order_status,Order.order_statuses.keys, {disabled: ["発送準備中","発送済み"]} %>
          <% end %>
          <%= f.submit "更新", class: "btn btn-success" %>
        </td>
      </tr>
    </table>
  <% end %>

  <div class="row">
    <div class="col-sm-8">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
            <th>製作ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @order.order_details.each do |order_detail| %>
          <tr>
            <td><%= order_detail.product_name %></td>
            <td><%= order_detail.price %></td>
            <td><%= order_detail.quantity %></td>
            <td><%= order_detail.price * order_detail.quantity%>円</td>
            <td>
              <%= form_with model: order_detail, url: admin_order_detail_path, method: :patch, local: true do |f| %>
                <%= f.hidden_field :order_detail_id, :value => order_detail.id %>
                <%= f.select :status, OrderDetail.status.keys %>
                <%= f.submit "更新", class: "btn btn-success" %>
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <div class="col-sm-4">
      <table class="table table-bordered">
        <tr>
          <th>商品合計</th>
          <td>

          </td>
        </tr>
        <tr>
          <th>送料</th><td><%= @order.postage %>円</td>
        </tr>
        <tr>
          <th>請求金額合計</th>
          <td>円</td>
        </tr>
      </table>
     </div>
  </div>
</div>